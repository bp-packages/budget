{
    "name": "bp-packages/budget",
    "description": "CRUD budget",
    "type": "library",
    "license": "MIT",
    "require": {
        "codeigniter4/framework": "^4.0",
        "mnsami/composer-custom-directory-installer": "^1",
        "dompdf/dompdf": "^1.2"
    },
    "authors": [
        {
            "name": "leomaciel",
            "email": "dev@leomaciel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BpPackages\\Budget\\": "app/Libraries"
        }
    },
    "extra": {
        "installer-paths": {
            "./app/Libraries/{$name}": [
                "bp-packages/budget"
            ],
            "./app/Views/{$name}": [
                "bp-packages/budget"
            ]
        }
    }
}